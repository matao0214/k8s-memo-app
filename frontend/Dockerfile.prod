# 使用する Node.js のベースイメージ
FROM node:20-alpine AS build

WORKDIR /frontend

COPY . .

# API_URL を環境変数に設定
# k8s/deployment/frontend.yaml で設定しても反映されないためここで設定
ENV NEXT_PUBLIC_API_URL=http://35.221.111.23:3000

RUN npm install
RUN npm run build
# RUN npm run export

CMD ["yarn", "start-production"]

